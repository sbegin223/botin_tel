<% content_for :title, t("roles.index.title") %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t("roles.index.heading") %></h1>
    <% if can? :create, Role %>
      <%= link_to t("roles.index.new"), new_role_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="roles" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @roles.any? %>
      <% @roles.each do |role| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render role %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <% if can? :read, role %>
              <%= link_to t("roles.index.show"), role, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% end %>
            <% if can? :update, role %>
              <%= link_to t("roles.index.edit"), edit_role_path(role), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% end %>
            <% if can? :destroy, role %>
              <%= button_to t("roles.index.destroy"), role, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No roles found.</p>
    <% end %>
  </div>
</div>
