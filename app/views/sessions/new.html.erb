<% content_for :title, "Login" %>

<h1 class="text-2xl font-bold text-gray-900 mb-6">Login</h1>

<% if flash[:alert] %>
  <p class="mb-4 p-2 bg-red-100 text-red-700 rounded-lg font-medium"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :email, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm
          focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm
          focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <div>
    <%= form.submit "Login", class: "h-10 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium text-sm" %>
  </div>
<% end %>
