<% content_for :title, t("phones.index.title") %>

<% if notice %>
  <p class="mb-4 text-green-600 font-medium"><%= notice %></p>
<% end %>

<h1 class="text-2xl font-bold text-gray-900 mb-6"><%= t("phones.index.heading") %></h1>

<div id="phones" class="space-y-4">
  <% @phones.each do |phone| %>
    <div class="p-4 bg-white rounded-lg shadow flex justify-between items-center">
      <div>
        <%= render phone %>
      </div>
      <div>
        <% if can? :read, phone %>
          <%= link_to t("phones.index.show"), phone, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6 flex space-x-4">
  <% if can? :create, Phone %>
    <%= link_to t("phones.index.new"), new_phone_path, 
          class: "h-8 px-3 flex items-center bg-indigo-600 text-white rounded-md hover:bg-indigo-700 text-sm" %>
  <% end %>
</div>
