<%= form_with(model: phone) do |form| %>
  <% if phone.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
      <h2 class="font-medium mb-2">
        <%= pluralize(phone.errors.count, "error") %> prohibited this phone from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% phone.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- User Selection -->
  <div class="mb-4">
    <%= form.label :user_id, "User", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :user_id, User.all, :id, :name, 
          { prompt: "Select User" }, 
          { class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                    focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" } %>
  </div>

  <!-- Phone Number -->
  <div class="mb-4">
    <%= form.label :number, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :number, 
          class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                    focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <!-- Phone Kind -->
  <div class="mb-6">
    <%= form.label :kind, "Phone Type", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :kind, %w[mobile work home], {}, 
          { class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                    focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" } %>
  </div>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Save Phone", 
          class: "h-10 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium text-sm" %>
  </div>
<% end %>
