<%= form_with(model: department) do |form| %>
  <% if department.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
      <h2 class="font-medium mb-2">
        <%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% department.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Department Name -->
  <div class="mb-6">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, 
          class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                    focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Save Department", 
          class: "h-10 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium text-sm" %>
  </div>
<% end %>
