<% content_for :title, "Editing Department" %>

<h1 class="text-2xl font-bold text-gray-900 mb-6">Editing Department</h1>

<div class="max-w-lg bg-white p-6 rounded-lg shadow">
  <%= render "form", department: @department %>
</div>

<div class="mt-6 flex space-x-4">
  <%= link_to "Show Department", @department, 
        class: "h-8 px-3 flex items-center bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm" %>

  <%= link_to "Back to Departments", departments_path, 
        class: "h-8 px-3 flex items-center bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm" %>
</div>
