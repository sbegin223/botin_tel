<% content_for :title, t("users.edit.title") %>

<h1 class="text-2xl font-bold text-gray-900 mb-6"><%= t("users.edit.heading") %></h1>

<div class="max-w-lg bg-white p-6 rounded-lg shadow">
  <%= render "form", user: @user %>
</div>

<div class="mt-6 flex space-x-4">
  <%= link_to t("users.edit.show"), @user, 
        class: "h-8 px-3 flex items-center bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm" %>
  <%= link_to t("users.edit.back"), users_path, 
        class: "h-8 px-3 flex items-center bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm" %>
</div>
