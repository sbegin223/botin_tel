<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
      <h2 class="font-medium mb-2">
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name Field -->
  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, 
          class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                  focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <!-- Email Field -->
  <div class="mb-6">
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :email, 
          class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                  focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm
          focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>
  
  <div class="mb-6">
    <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm
          focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
  </div>

  <!-- Phone Numbers -->
  <h2 class="text-lg font-medium text-gray-900 mb-4">Phone Numbers</h2>
  <div id="phones" class="space-y-4">
    <%= form.fields_for :phones do |phone_form| %>
      <div class="p-4 bg-gray-50 rounded-lg shadow">
        <!-- Phone Number -->
        <div class="mb-4">
          <%= phone_form.hidden_field :id %>
          <%= phone_form.label :number, class: "block text-sm font-medium text-gray-700" %>
          <%= phone_form.text_field :number, 
                class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                        focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" %>
        </div>

        <!-- Phone Kind -->
        <div>
          <%= phone_form.label :kind, "Phone Type", class: "block text-sm font-medium text-gray-700" %>
          <%= phone_form.select :kind, %w[mobile work home],
                {},
                { class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm 
                          focus:border-indigo-500 focus:ring focus:ring-indigo-500 sm:text-sm px-3 py-2" } %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="mt-6">
    <%= form.submit "Save User", 
          class: "h-10 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium text-sm" %>
  </div>
<% end %>
