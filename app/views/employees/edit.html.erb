<% content_for :title, "Editing Employee" %>

<h1 class="text-2xl font-bold text-gray-900 mb-6">Editing Employee</h1>

<div class="max-w-lg bg-white p-6 rounded-lg shadow">
  <%= render "form", employee: @employee %>
</div>

<div class="mt-6 flex space-x-4">
  <%= link_to "Show Employee", @employee, 
        class: "h-8 px-3 flex items-center bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm" %>

  <%= link_to "Back to Employees", employees_path, 
        class: "h-8 px-3 flex items-center bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm" %>
</div>
